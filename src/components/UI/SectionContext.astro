---
import Header from '@components/UI/Header.astro';
---

<div class="container">
    <div class="header">
        <Header />
    </div>
    <slot></slot>
    <div class="empty"></div>
</div>

<style>
    .container {
        display: grid;
        height: 100%;
        grid-template-columns: 298px 1fr 250px;
        grid-template-rows: 10vh 100%;
        justify-content: space-between;
        box-sizing: border-box;
        align-items: flex-start;
    }
    .container > div {
        height: 100%;
        padding: 24px;
        box-sizing: border-box;
    }

    .emtpy {
        grid-column: 3;
        grid-row: 2;
    }

    .header {
        
        grid-column: 1 / span 3;
        grid-row: 1;
    }

    @media (max-width: 1000px) {
        .container {
            grid-template-columns: 298px 1fr;
            grid-template-rows: 10vh 90vh;
        }
        .empty {
            display: none;
        }
    }

    @media (max-width: 768px) {
        .container {
            grid-template-columns: 1fr;
            grid-template-rows: 10vh 10vh 90vh;
        }
        .header {
            grid-column: 1;
            grid-row: 1;
        }
    }
</style>
